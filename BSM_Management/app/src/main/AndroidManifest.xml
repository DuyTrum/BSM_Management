<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Camera cho QR -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name="database.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BSM_Management">

        <!-- AddHostel -->
        <activity
            android:name=".ui.hostel.AddHostelActivity"
            android:exported="false" />

        <!-- QR Scan -->
        <activity
            android:name=".ui.qr.QrScanActivity"
            android:exported="false" />

        <!-- Invoices -->
        <activity android:name=".ui.invoice.InvoiceListActivity" android:exported="false" />
        <activity android:name=".ui.invoice.AddInvoiceActivity" android:exported="false" />
        <activity android:name=".ui.invoice.InvoiceActivity" android:exported="false" />

        <!-- Contracts -->
        <activity android:name=".ui.contract.ContractListActivity" android:exported="false" />
        <activity android:name=".ui.contract.ContractRoomActivity" android:exported="false" />
        <activity android:name=".ui.contract.AddContractActivity" android:exported="false" />

        <!-- Profile -->
        <activity android:name=".ui.profile.ChangePasswordActivity" android:exported="false" />

        <!-- Auth -->
        <activity android:name=".ui.auth.RegisterActivity" android:exported="false" />
        <!-- <activity android:name=".ui.auth.LoginActivity" android:exported="false" /> -->

        <!-- MainActivity (router + dashboard) -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
