<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- viền xám nhạt -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC"/>

    <!-- bo góc -->
    <corners android:radius="8dp"/>

    <!-- màu nền trắng -->
    <solid android:color="@android:color/white"/>

    <!-- padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
