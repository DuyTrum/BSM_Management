<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg_scr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/pad_l">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_border"
            android:padding="@dimen/pad_l"
            android:layout_marginBottom="@dimen/mar_l"
            android:clipToPadding="false">

            <!-- Hàng trên: avatar + tên + mũi tên -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_person"
                    android:background="@drawable/bg_circle_blue"
                    android:padding="8dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/mar_m">

                    <TextView
                        android:id="@+id/tvHello"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xin chào! Tài"
                        android:textSize="@dimen/txt_m"
                        android:textColor="@color/txt_pri"/>

                    <TextView
                        android:id="@+id/tvGreetingMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chúc bạn một ngày làm việc hiệu quả"
                        android:textSize="@dimen/txt_s"
                        android:textColor="@color/txt_pri"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginBottom="@dimen/mar_m"
                android:layout_marginTop="@dimen/mar_m"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/tvLabelMa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã khách hàng"
                        android:textColor="@color/txt_sec"
                        android:textSize="@dimen/txt_m"/>

                    <TextView
                        android:id="@+id/tvMaKhachHang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#25OW00011347"
                        android:textColor="@color/dark_green"
                        android:textSize="@dimen/txt_m"/>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/btnCopy"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="@dimen/pad_m"
                    android:paddingEnd="@dimen/pad_m"
                    android:background="@drawable/bg_btn_copy">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sao chép"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_m"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/ic_copy"/>
                </LinearLayout>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider"/>

            <!-- Số điện thoại -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <!-- Tiêu đề bên trái -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:textColor="@color/txt_sec"
                    android:textSize="@dimen/txt_m"/>

                <!-- Giá trị bên phải -->
                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="+84 912 345 678"
                    android:textColor="@color/txt_pri"
                    android:textSize="@dimen/txt_m"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider"/>

            <!-- Ngày tham gia -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày tham gia"
                    android:textColor="@color/txt_sec"
                    android:textSize="@dimen/txt_m"/>

                <TextView
                    android:id="@+id/tvJoinedDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="01/09/2024"
                    android:textColor="@color/txt_pri"
                    android:textSize="@dimen/txt_m"/>
            </LinearLayout>

        </LinearLayout>

        <!-- ========== CARD 1: Công ty, nhóm ==========
             (1 hàng) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/pad_l"
            android:background="@drawable/bg_border"
            android:layout_marginBottom="@dimen/mar_l">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rowChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/icon_m"
                        android:layout_height="@dimen/icon_m"
                        android:src="@drawable/ic_key"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/mar_m"
                        android:text="Đổi mật khẩu"
                        android:textColor="@color/txt_pri"
                        android:textSize="@dimen/txt_m"/>

                    <ImageView
                        android:layout_width="@dimen/icon_m"
                        android:layout_height="@dimen/icon_m"
                        android:src="@drawable/ic_next"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:id="@+id/rowAppPermission"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/icon_m"
                        android:layout_height="@dimen/icon_m"
                        android:src="@drawable/ic_rate"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đánh giá phần mềm"
                        android:layout_marginLeft="@dimen/mar_m"
                        android:textColor="@color/txt_pri"
                        android:textSize="@dimen/txt_m"/>

                    <ImageView
                        android:layout_width="@dimen/icon_m"
                        android:layout_height="@dimen/icon_m"
                        android:src="@drawable/ic_next"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:id="@+id/rowHelp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/icon_m"
                        android:layout_height="@dimen/icon_m"
                        android:src="@drawable/ic_chat_bubble"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/mar_m"
                        android:text="Trung tâm trợ giúp"
                        android:textColor="@color/txt_pri"
                        android:textSize="@dimen/txt_m"/>

                    <ImageView
                        android:layout_width="@dimen/icon_m"
                        android:layout_height="@dimen/icon_m"
                        android:src="@drawable/ic_next"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <!-- Đăng xuất -->
        <LinearLayout
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/pad_l"
            android:background="@drawable/bg_border"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="@dimen/icon_m"
                android:layout_height="@dimen/icon_m"
                android:src="@drawable/ic_logout"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mar_m"
                android:text="Đăng xuất"
                android:textColor="@color/dark_red"
                android:textSize="@dimen/txt_m"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
