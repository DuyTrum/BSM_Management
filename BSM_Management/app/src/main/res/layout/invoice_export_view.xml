<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#F5F7F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:elevation="2dp"
            android:layout_marginBottom="10dp"
            android:clipToOutline="true"
            android:backgroundTint="@android:color/white"
            android:background="@drawable/bg_export_card">

            <TextView
                android:id="@+id/tvRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng 1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:background="#FAFAFA"
                android:padding="12dp"
                android:weightSum="3"
                android:backgroundTint="#FAFAFA">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hóa đơn tháng"
                        android:textColor="#777777"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tvPeriod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T.11, 2025"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="15sp"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày lập h.đơn"
                        android:textColor="#777777"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tvCreatedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16/11/2025"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="15sp"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hạn nạp tiền"
                        android:textColor="#777777"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tvDueDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17/11/2025"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="15sp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Kính gửi"
                    android:textColor="#555555"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvTenantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thbb"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvTenantPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SĐT: 0958587658"
                        android:textSize="14sp"
                        android:textColor="#777777"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Lý do thu"
                android:textSize="16sp"
                android:textColor="#777777"/>

            <TextView
                android:id="@+id/tvReason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu tiền tháng đầu tiên"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginTop="4dp"
                android:textColor="#333333"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Tiền thuê phòng"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvRentAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.400.000 đ"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Thu tiền cọc"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvDepositAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.000.000 đ"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="2"
                android:backgroundTint="#F1F8E9"
                android:background="@drawable/bg_total_box"> <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lần thanh toán"
                    android:textSize="15sp"
                    android:textColor="#555555"/>

                <TextView
                    android:id="@+id/tvTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 lần"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng phải trả"
                        android:textSize="15sp"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/tvTotalPaid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã trả xong"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:textSize="17sp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/tvNote"
                android:text="* Chú ý: Vui lòng thanh toán đúng hạn và trước ngày 17/11/2025"
                android:textColor="#777777"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>