<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bsm_sheet_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        android:layout_marginBottom="88dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ẢNH ĐỘNG CHỦ ĐẠO -->
            <include layout="@layout/view_hero_buildings"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đầu tiên hãy tạo nhà để quản lý"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:textColor="@color/bsm_text_primary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn có thể quản lý không giới hạn số tòa nhà &amp; số phòng/giường/căn hộ."
                android:gravity="center"
                android:textColor="@color/bsm_text_secondary"
                android:paddingTop="6dp"/>

            <!-- HAI NÚT LỚN: Hướng dẫn & Tạo mới nhà -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGuide"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Hướng dẫn"
                    app:icon="@drawable/ic_help"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    app:cornerRadius="16dp"/>

                <Space android:layout_width="12dp" android:layout_height="0dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreateTop"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Tạo mới nhà"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_add_24"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    app:backgroundTint="@color/bsm_green"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kênh hỗ trợ của chúng tôi"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="24dp"
                android:textColor="@color/bsm_text_primary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chuyên viên luôn sẵn sàng hỗ trợ 24/7"
                android:textColor="@color/bsm_text_secondary"
                android:paddingBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/bsm_divider">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/rowCall"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:paddingHorizontal="8dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_phone"
                            app:tint="@color/bsm_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gọi điện trực tiếp (sẵn sàng)"
                            android:layout_marginStart="12dp"
                            android:textColor="@color/bsm_text_primary"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp"
                        android:background="@color/bsm_divider"/>

                    <LinearLayout
                        android:id="@+id/rowZalo"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:paddingHorizontal="8dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_zalo" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Chat/Gọi điện qua Facebook (sẵn sàng)"
                            android:layout_marginStart="12dp"
                            android:textColor="@color/bsm_text_primary"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Thanh nút dưới cùng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_gravity="bottom"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateBottom"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Tạo mới nhà"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_add_24"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:backgroundTint="@color/bsm_green"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
