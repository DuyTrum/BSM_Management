<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- SLOT TRỐNG -->
    <LinearLayout
        android:id="@+id/cardEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/bg_slot_empty">

        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="➕ Thêm khách"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="6dp" />
    </LinearLayout>

    <!-- SLOT CÓ KHÁCH -->
    <LinearLayout
        android:id="@+id/cardTenant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_slot_tenant"
        android:visibility="gone">

        <!-- TÊN + SĐT -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvTenantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên khách"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTenantPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SĐT"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- NÚT SỬA -->
        <ImageButton
            android:id="@+id/btnTenantEdit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit"
            android:contentDescription="Sửa" />

        <!-- NÚT XÓA -->
        <ImageButton
            android:id="@+id/btnTenantDelete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete_outline"
            android:contentDescription="Xóa" />
    </LinearLayout>

</LinearLayout>
