<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_scr">

    <!-- Header back -->
    <include
        android:id="@+id/headerBack"
        layout="@layout/view_header_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <!-- Single child của ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/pad_l">

            <!-- BLOCK: Lý do lập hóa đơn -->
            <LinearLayout
                android:id="@+id/blockReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/pad_l"
                android:background="@drawable/bg_border"
                android:layout_marginBottom="@dimen/mar_m">

                <TextView
                    android:id="@+id/tvReasonLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lý do lập hóa đơn *"
                    android:textSize="@dimen/txt_m"
                    android:textColor="@color/txt_pri"/>

                <Spinner
                    android:id="@+id/spReason"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_h"
                    android:layout_marginTop="@dimen/mar_s"
                    android:spinnerMode="dialog"
                    android:background="@drawable/bg_border" />

            </LinearLayout>

            <!-- PANEL: Thu tiền tháng đầu tiên -->
            <LinearLayout
                android:id="@+id/panelFirstMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_border"
                android:padding="@dimen/pad_l"
                android:layout_marginBottom="@dimen/mar_m">

                <!-- Header: divider chạm mép vì panel không padding -->
                <include
                    android:id="@+id/secFirstMonth"
                    layout="@layout/view_section_header" />

                <!-- Nội dung: padding ngang/bottom riêng -->
                <LinearLayout
                    android:id="@+id/contentFirstMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 2 DatePicker cùng hàng -->
                    <!-- 2 DatePicker cùng hàng + tiêu đề -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/mar_s">

                        <!-- Cột trái: Từ ngày -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="@dimen/mar_s">

                            <TextView
                                android:id="@+id/lblFromDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Từ ngày"
                                android:textSize="@dimen/txt_s"
                                android:textColor="@color/txt_sec" />

                            <TextView
                                android:id="@+id/tvFromDate"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edt_h"
                                android:layout_marginTop="@dimen/mar_s"
                                android:background="@drawable/bg_border"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/pad_m"
                                android:paddingEnd="@dimen/pad_m"
                                android:text="07/09/2025" />
                        </LinearLayout>

                        <!-- Cột phải: Đến ngày -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lblToDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Đến ngày"
                                android:textSize="@dimen/txt_s"
                                android:textColor="@color/txt_sec" />

                            <TextView
                                android:id="@+id/tvToDate"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edt_h"
                                android:layout_marginTop="@dimen/mar_s"
                                android:background="@drawable/bg_border"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/pad_m"
                                android:paddingEnd="@dimen/pad_m"
                                android:text="30/09/2025" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- THAY toàn bộ ConstraintLayout màu xanh bằng block 1 hàng này -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mar_l"
                        android:background="@drawable/bg_box_green"
                        android:padding="@dimen/pad_l"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvSubtotalLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thành tiền"
                            android:textSize="@dimen/txt_m"
                            android:textColor="@color/txt_pri"/>

                        <TextView
                            android:id="@+id/tvSubTotal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="0 đ"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt_m"
                            android:textColor="@color/txt_pri"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <Button
            android:id="@+id/btnCreateInvoice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_h"
            android:text="Lập hóa đơn"
            android:textColor="@color/txt_on_pri"
            android:backgroundTint="@color/pri"
            android:layout_marginStart="@dimen/pad_l"
            android:layout_marginEnd="@dimen/pad_l"
            android:layout_marginTop="@dimen/mar_m"/>
    </LinearLayout>
</LinearLayout>
