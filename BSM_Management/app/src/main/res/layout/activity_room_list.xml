<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bsm_bg">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="@string/title_room_list"
            app:titleCentered="false"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:tabIndicatorColor="@color/bsm_green"
            app:tabSelectedTextColor="@color/bsm_green"
            app:tabTextColor="@color/bsm_text_secondary"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageButton
        android:id="@+id/btnFilter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_icon_circle_soft"
        android:contentDescription="@string/filter"
        app:srcCompat="@drawable/ic_filter_list"
        app:tint="@color/bsm_text_primary"
        app:layout_anchor="@id/topBar"
        app:layout_anchorGravity="end"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRooms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="12dp"
        android:clipToPadding="false"/>

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_rooms"
        android:textStyle="bold"
        android:textColor="@color/bsm_text_secondary"
        app:layout_anchorGravity="center"
        app:layout_anchor="@id/rvRooms"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:tint="@android:color/white"
        app:backgroundTint="@color/bsm_green"
        app:srcCompat="@drawable/ic_add_24"
        app:layout_anchor="@id/rvRooms"
        app:layout_anchorGravity="bottom|end"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
