<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <ImageView
        android:id="@+id/ivIntro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_dashboard"
        android:contentDescription="intro"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý dễ dàng"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/txt_pri"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý nhà trọ, hợp đồng, hóa đơn chỉ với vài thao tác."
        android:textSize="15sp"
        android:textColor="@color/txt_sec"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp"/>
</LinearLayout>
