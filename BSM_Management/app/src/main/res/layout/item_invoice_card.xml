<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/mar_l"
    app:cardCornerRadius="@dimen/mar_l"
    app:strokeColor="@color/border"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_card">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/pad_l">

            <!-- Badge tháng -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="56dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/pad_m"
                android:background="@color/border">

                <TextView
                    android:id="@+id/tvMonthShort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T.9"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_m"
                    android:textColor="@color/txt_pri"/>

                <TextView
                    android:id="@+id/tvYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025"
                    android:textSize="@dimen/txt_s"
                    android:textColor="@color/txt_sec"/>
            </LinearLayout>

            <!-- Tiêu đề + phụ đề + note -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mar_l"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng 1 - #45600"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_l"
                    android:textColor="@color/txt_pri"/>

                <TextView
                    android:id="@+id/tvSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trong thời hạn hợp đồng"
                    android:textColor="@color/txt_sec"
                    android:textSize="@dimen/txt_m"/>

                <TextView
                    android:id="@+id/tvNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khách chưa cài APP"
                    android:textColor="@color/warn"
                    android:textSize="@dimen/txt_s"/>
            </LinearLayout>

            <TextView
                android:id="@+id/btnDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết >"
                android:textColor="@color/acc"
                android:textSize="@dimen/txt_m"
                android:padding="@dimen/pad_m"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>

        <!-- 3 CỘT NGÀY: Tạo / Vào ở / Hết hạn -->
        <LinearLayout
            android:id="@+id/rowDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingStart="@dimen/pad_l"
            android:paddingEnd="@dimen/pad_l"
            android:paddingTop="@dimen/pad_m"
            android:paddingBottom="@dimen/pad_m">

            <!-- Col 1: Tạo -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tạo"
                    android:textColor="@color/txt_sec"
                    android:textSize="@dimen/txt_s"/>

                <TextView
                    android:id="@+id/tvCreatedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07/09/2025"
                    android:textStyle="bold"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"/>

            <!-- Col 2: Vào ở -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vào ở"
                    android:textColor="@color/txt_sec"
                    android:textSize="@dimen/txt_s"/>

                <TextView
                    android:id="@+id/tvMoveInDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07/09/2025"
                    android:textStyle="bold"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"/>

            <!-- Col 3: Hết hạn -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hết hạn"
                    android:textColor="@color/txt_sec"
                    android:textSize="@dimen/txt_s"/>

                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vô thời hạn"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>

        <!-- HÀNH ĐỘNG -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/btnCall"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_h"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Gọi"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/btnSend"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_h"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Gửi h.đơn"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/btnPrint"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_h"
                android:layout_weight="1"
                android:gravity="center"
                android:text="In"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>

        <!-- TỔNG TIỀN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/pad_l">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng số"
                    android:textColor="@color/txt_sec"/>

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.000.000đ"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã trả"
                    android:textColor="@color/txt_sec"/>

                <TextView
                    android:id="@+id/tvPaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa thu"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Còn lại"
                    android:textColor="@color/txt_sec"/>

                <TextView
                    android:id="@+id/tvRemain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.000.000đ"
                    android:textStyle="bold"
                    android:textColor="@color/err"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
