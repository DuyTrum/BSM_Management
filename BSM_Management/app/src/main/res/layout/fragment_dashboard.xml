<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bsm_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ===== HEADER (giữ nguyên như bạn) ===== -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:background="@drawable/bg_header_pill"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_circle"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_home"
                app:tint="@android:color/white"/>

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang quản lý Nhà trọ"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/ivHome"
                app:layout_constraintTop_toTopOf="@id/ivHome"
                app:layout_constraintBottom_toTopOf="@id/tvHostelName"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/tvHostelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DuyHen"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/ivHome"
                app:layout_constraintBottom_toBottomOf="@id/ivHome"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:id="@+id/ivChevron"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:srcCompat="@drawable/ic_arrow_drop_down"
                app:tint="@android:color/white"
                app:layout_constraintStart_toEndOf="@id/tvHostelName"
                app:layout_constraintBottom_toBottomOf="@id/tvHostelName"
                android:layout_marginStart="6dp"/>

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_icon_circle"
                app:srcCompat="@drawable/ic_menu"
                app:tint="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/btnQr"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_icon_circle"
                app:srcCompat="@drawable/ic_qr_code_scanner"
                app:tint="@android:color/white"
                app:layout_constraintEnd_toStartOf="@id/btnMenu"
                app:layout_constraintTop_toTopOf="@id/btnMenu"
                app:layout_constraintBottom_toBottomOf="@id/btnMenu"
                android:layout_marginEnd="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ===== SEGMENTED TABS (giữ nguyên) ===== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/segCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/bsm_card"
            app:strokeColor="@color/bsm_divider"
            app:strokeWidth="1dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleTabs"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="4dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnManage"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/tab_manage"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/seg_btn_tint"
                    app:cornerRadius="18dp"
                    app:strokeWidth="0dp"
                    app:rippleColor="@color/bsm_divider"
                    android:textColor="@color/seg_btn_text"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOverview"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/tab_overview"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/seg_btn_tint"
                    app:cornerRadius="18dp"
                    app:strokeWidth="0dp"
                    app:rippleColor="@color/bsm_divider"
                    android:textColor="@color/seg_btn_text"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </com.google.android.material.card.MaterialCardView>
        <FrameLayout
            android:id="@+id/tabContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/segCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
