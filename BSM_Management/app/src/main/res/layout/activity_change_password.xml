<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- HEADER BACK (đã có view_header_back, bạn include như sau) -->
    <include
        android:id="@+id/header"
        layout="@layout/view_header_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/headerDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- Divider trên bottom bar -->
    <View
        android:id="@+id/bottomDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- NÚT CỐ ĐỊNH DƯỚI (bottom bar) -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:padding="@dimen/pad_l"
        android:background="@color/bg_card"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Thay đổi mật khẩu"
            android:textColor="@color/txt_on_pri"
            android:backgroundTint="@color/pri"/>
    </LinearLayout>

    <!-- NỘI DUNG CUỘN giữa header và bottom bar -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/pad_l">

            <!-- LOGO + TIÊU ĐỀ “Quản lý / Nhà trọ” -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/mar_l"
                android:layout_marginBottom="@dimen/mar_l">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_bsm_logo"
                    android:contentDescription="BSM logo" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/mar_m">

                    <TextView
                        android:id="@+id/tvQuanLy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quản lý"
                        android:textSize="@dimen/txt_l"
                        android:textStyle="bold"
                        android:textColor="@color/txt_pri" />

                    <TextView
                        android:id="@+id/tvNhaTro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhà trọ"
                        android:textSize="@dimen/txt_l"
                        android:textStyle="bold"
                        android:textColor="@color/pri" />
                </LinearLayout>
            </LinearLayout>

            <!-- CARD TRẮNG: FORM -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Xác nhận mật khẩu hiện tại -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xác nhận mật khẩu"
                    android:textColor="@color/txt_pri"
                    android:textSize="@dimen/txt_m"/>

                <EditText
                    android:id="@+id/etOld"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Nhập lại mật khẩu hiện tại"
                    android:inputType="textPassword"
                    android:textColor="@color/txt_pri"
                    android:textColorHint="@color/txt_sec"
                    android:background="@drawable/bg_border"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/pad_m"/>

                <!-- HÀNG 2 CỘT: Mật khẩu mới & Xác nhận mật khẩu mới -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/mar_m"
                    android:weightSum="2">

                    <!-- Mật khẩu mới -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/mar_m">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mật khẩu mới"
                            android:textColor="@color/txt_pri"
                            android:textSize="@dimen/txt_m"/>

                        <EditText
                            android:id="@+id/etNew"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="Mật khẩu mới"
                            android:inputType="textPassword"
                            android:textColor="@color/txt_pri"
                            android:textColorHint="@color/txt_sec"
                            android:background="@drawable/bg_border"/>
                    </LinearLayout>

                    <!-- Xác nhận mật khẩu mới -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/mar_m">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xác nhận mật khẩu"
                            android:textColor="@color/txt_pri"
                            android:textSize="@dimen/txt_m"/>

                        <EditText
                            android:id="@+id/etConfirm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Xác nhận"
                            android:inputType="textPassword"
                            android:textColor="@color/txt_pri"
                            android:textColorHint="@color/txt_sec"
                            android:background="@drawable/bg_border"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Checklist yêu cầu -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_box_green"
                    android:padding="@dimen/pad_m"
                    android:layout_marginTop="@dimen/mar_m">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✓  Mật khẩu phải lớn hơn 8 ký tự"
                        android:textColor="@color/dark_green"
                        android:textSize="@dimen/txt_m"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✓  Chú ý đến hoa thường"
                        android:textColor="@color/dark_green"
                        android:textSize="@dimen/txt_m"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
