<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Warning -->
    <TextView
        android:id="@+id/tvWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khách chưa sử dụng APP cho khách thuê"
        android:padding="12dp"
        android:textColor="#D46B08"
        android:background="#FFF7E6"
        android:textSize="14sp" />

    <!-- Chat với khách -->
    <LinearLayout
        android:id="@+id/rowChat"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/bsm_success">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat với khách"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Cho phép khách dùng app -->
    <LinearLayout
        android:id="@+id/rowAllowApp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:padding="12dp">
        <TextView
            android:text="Cho phép sử dụng APP - Khách thuê"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Xem chi tiết -->
    <LinearLayout
        android:id="@+id/rowDetail"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:padding="12dp">
        <TextView
            android:text="Xem chi tiết khách thuê"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Chỉnh sửa -->
    <LinearLayout
        android:id="@+id/rowEdit"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:padding="12dp">
        <TextView
            android:text="Chỉnh sửa khách thuê"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- In tờ khai tạm trú -->
    <LinearLayout
        android:id="@+id/rowPrint"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:padding="12dp">
        <TextView
            android:text="In tờ khai tạm trú"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Xóa khách thuê -->
    <LinearLayout
        android:id="@+id/rowDelete"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:padding="12dp">
        <TextView
            android:text="Xóa khách thuê"
            android:textSize="15sp"
            android:textColor="#D32F2F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
