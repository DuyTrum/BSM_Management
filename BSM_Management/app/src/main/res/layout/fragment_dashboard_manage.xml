<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- WARNING CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/warnCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/bsm_warning_bg"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivBell"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_notifications_active"
                app:tint="@color/bsm_success"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvWarnTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/allow_notification_title"
                android:textStyle="bold"
                android:textColor="@color/bsm_text_primary"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/ivBell"
                app:layout_constraintTop_toTopOf="@id/ivBell"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/tvWarnDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/allow_notification_desc"
                android:textColor="@color/bsm_text_secondary"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/tvWarnTitle"
                app:layout_constraintTop_toBottomOf="@id/tvWarnTitle"
                app:layout_constraintEnd_toEndOf="@id/tvWarnTitle"
                android:layout_marginTop="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAllowNotification"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="@string/allow_notification_btn"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_settings"
                app:iconPadding="8dp"
                app:iconTint="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/tvWarnDesc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- MENU TITLE -->
    <View
        android:id="@+id/barMenu"
        android:layout_width="3dp"
        android:layout_height="18dp"
        android:layout_marginTop="24dp"
        android:background="@color/bsm_success"
        app:layout_constraintTop_toBottomOf="@id/warnCard"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu quản lý nhà trọ"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/bsm_text_primary"
        app:layout_constraintStart_toEndOf="@id/barMenu"
        app:layout_constraintTop_toTopOf="@id/barMenu"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tvMenuDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quản lý đối tượng nghiệp vụ trong nhà trọ"
        android:textColor="@color/bsm_text_secondary"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvMenuTitle"
        app:layout_constraintStart_toStartOf="@id/tvMenuTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/tvMenuDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
